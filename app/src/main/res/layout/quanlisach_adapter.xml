<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginBottom="20dp">

    <ImageView
        android:id="@+id/img_sach"
        android:layout_width="100dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:background="@drawable/batman"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_tensach"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>

        <TextView
            android:id="@+id/theloaisach"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>

        <TextView
            android:id="@+id/tacgia"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>

        <TextView
            android:id="@+id/nhaxuatban"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>


        <TextView
            android:id="@+id/sosach"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>

        <TextView
            android:id="@+id/giamua"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>
        <TextView
            android:id="@+id/giaban"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>
        <TextView
            android:id="@+id/ngaynhap"
            android:layout_width="match_parent"
            android:layout_height="35dp"></TextView>
    </LinearLayout>

</LinearLayout>