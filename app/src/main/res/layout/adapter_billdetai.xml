<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/img_billicon"
        android:layout_width="100dp"
        android:background="@drawable/bill"
        android:layout_height="100dp"
        android:layout_gravity="center"></ImageView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="145dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_id_hoadon"
            android:layout_width="match_parent"
            android:layout_height="25dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tenkhachhang"
            android:layout_height="25dp"></TextView>
        <TextView
            android:id="@+id/tv_tensach"
            android:layout_width="match_parent"
            android:layout_height="25dp"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:id="@+id/sosach"></TextView>

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/gia_hoadon"
            android:layout_height="25dp"></TextView>
        <TextView
            android:layout_width="match_parent"
            android:id="@+id/ngayBan_hoadon"
            android:layout_height="25dp"></TextView>
    </LinearLayout>
</LinearLayout>