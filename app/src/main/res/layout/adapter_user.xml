<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/user_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:background="@drawable/vit"></ImageView>

    <LinearLayout
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ten"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:fontFamily="@font/chewy"
            android:textAllCaps="true"
            android:textStyle="bold"
            tools:text="đề mô"></TextView>

        <TextView
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>

        <TextView
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>

        <TextView
            android:id="@+id/sodienthoai"
            android:layout_width="match_parent"
            android:layout_height="30dp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/edit_user"
            android:background="@drawable/ic_baseline_edit_24"></ImageView>
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/delete_user"
            android:background="@drawable/delete"></ImageView>

    </LinearLayout>


</LinearLayout>